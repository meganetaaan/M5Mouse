{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "Build project",
            "command": "make",
            "args": [
                "DEBUG=1",
                "-j8",
                "all"
            ],
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "type": "shell",
            "label": "Flash program",
            "command": "openocd -f ./openocd.cfg -c \"flash_elf build/m5mouse2.elf\"",
            "problemMatcher": [],
            "group": "none",
        }
    ]
}